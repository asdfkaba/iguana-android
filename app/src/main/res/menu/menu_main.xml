    <item
        android:id="@+id/menuSort"
        app:showAsAction="ifRoom"
        android:title="Order by"
        android:visible="false">
        <menu
            android:id="@+id/sortmenu">
            <group
                android:id="@+id/sort_group"
                android:checkableBehavior="single">
                <item
                    android:id="@+id/menuSortNumber"
                    android:title="Sort by number" />
                <item
                    android:id="@+id/menuSortPriority"
                    android:title="Sort by priority" />
                <item
                    android:id="@+id/menuSortStorypoints"
                    android:title="Sort by Storypoints" />
                <item
                    android:id="@+id/menuSortTitle"
                    android:title="Sort by title" />
                <item
                    android:id="@+id/menuSortType"
                    android:title="Sort by type" />
            </group>

            <item
                android:id="@+id/menuSortReverse"
                android:checkable="true"
                android:title="Reverse" />
        </menu>
    </item>
     <item
