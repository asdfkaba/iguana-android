<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:background="@drawable/selector"
        card_view:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />


            <ImageView
                android:id="@+id/priority"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/title"
                android:padding="7dp" />


            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/title"
                android:layout_marginEnd="15dp"
                android:padding="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/issue_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/cardview_light_background"
                android:visibility="invisible"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>


            <ImageButton
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_edit_black_24dp"
                android:tint="@color/cardview_light_background"
                android:visibility="invisible" />

            <Space
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/sprint_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:drawablePadding="-5sp"
                android:drawableTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_add_black_24dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="6dp"
                android:text="SPRINT"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp"
                android:tint="#ffffff"
                android:visibility="gone"></Button>


            <Button
                android:id="@+id/sprint_minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:drawablePadding="-5sp"
                android:drawableTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_remove_black_24dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="6dp"
                android:text="SPRINT"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp"
                android:tint="#ffffff"
                android:visibility="gone"></Button>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/cardview_light_background"
                android:visibility="invisible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>